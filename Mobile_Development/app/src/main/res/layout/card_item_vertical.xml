<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="24dp"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    android:backgroundTint="?attr/colorSecondary"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageArticle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_place_holder"
            android:contentDescription="@string/iv_placeholder_card_vertical"
            app:riv_corner_radius="12dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleArticle"
                tools:text="Sample Event Title Long"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/amber_800"/>

            <TextView
                android:id="@+id/descriptionNews"
                tools:text="This is the description of the article, which is long enough to be ellipsized."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:textSize="10dp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
